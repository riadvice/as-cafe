<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    
        <modelVersion>4.0.0</modelVersion>

        <groupId>org.servebox.cafe</groupId>
        <artifactId>actionscript-cafe</artifactId>
        <version>0.2-SNAPSHOT</version>

        <name>Servebox Actionscript Cafe</name>
        <packaging>swc</packaging>

        <properties>
                <!-- AS3Commons -->
                <as3commons-reflect.version>1.3.1</as3commons-reflect.version>
                <as3commons-lang.version>0.3</as3commons-lang.version>
                <as3commons-logging.version>1.2</as3commons-logging.version>
                <as3commons-bytecode.version>0.7</as3commons-bytecode.version>
        </properties>

        <repositories>
                <repository>
                        <id>Maven.ServeBox.org</id>
                        <name>ServeBox.org repository</name>
                        <url>http://maven.servebox.org/repository</url>
                </repository>
                <repository>
                        <id>Archiva.WebDAV</id>
                        <name>Archiva Internal Repository</name>
                        <url>dav:https://sbserver-randy.golgotha.servebox.com/archiva/repository/internal</url>
                        <layout>default</layout>
                        <releases>
                                <enabled>true</enabled>
                                <updatePolicy>never</updatePolicy>
                                <checksumPolicy>warn</checksumPolicy>
                        </releases>
                        <snapshots>
                                <enabled>true</enabled>
                        </snapshots>
                </repository>
                <repository>
			<id>yoolab.org-releases</id>
			<url>http://projects.yoolab.org/maven/content/repositories/releases</url>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
		<repository>
			<id>yoolab.org-snapshots</id>
			<url>http://projects.yoolab.org/maven/content/repositories/snapshots</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>		
        </repositories>
        <pluginRepositories>
                <pluginRepository>
                        <id>Maven.ServeBox.org</id>
                        <name>ServeBox.org repository</name>
                        <url>http://maven.servebox.org/repository</url>
                </pluginRepository>
        </pluginRepositories>

        <build>
            <!--  extensions>
              <extension>
                <groupId>org.apache.maven.wagon</groupId>
