            </extensions-->


                <plugins>
                        <plugin>
                                <groupId>org.servebox.flex</groupId>
                                <artifactId>flex-plugin</artifactId>
                                <version>3.0.0-beta6</version>
                                <extensions>true</extensions>
                                <configuration>
                                        <locales>
                                                <locale>en_US</locale>
                                        </locales>
                                        <asDocTemplateDependency>
                                                <groupId>org.servebox.flex.asdoc</groupId>
                                                <artifactId>servebox-template</artifactId>
                                        </asDocTemplateDependency>
                                        <themeDependencies>
                                                <themeDependency>
                                                        <groupId>com.adobe.flex.sdkcore</groupId>
                                                        <artifactId>sparkskins</artifactId>
                                                </themeDependency>
                                        </themeDependencies>
                                        <!--localSdk>Flex 4.0</localSdk>
                                        <eclipseExclusions>
                                        <exclusion><groupId>com.adobe.flex.sdkcore</groupId></exclusion>
                                        </eclipseExclusions-->
                                </configuration>
                        </plugin>
        </plugins>
    </build>
